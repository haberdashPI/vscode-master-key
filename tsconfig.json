{
    "compilerOptions": {
        "module": "es2022",
        "esModuleInterop": true,
        "target": "ES2022",
        "moduleResolution": "node",
        "lib": [
            "ES2022",
            "webworker",
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true, /* enable all strict type-checking options */
        "types": [
            "vscode",
            "node",
        ],
    },
    "include": [
        "src/**/*.ts",
        "src/test/unit/extension.test.ts"
    ],
    "exclude": [
        "src/test/**/*.ts",
        "src/oldtest/**/*.mts",
        "out/**/*.js",
        "src/oldtest/**",
        "src/rust/parsing/lib/**/*.{js,d.ts}",
    ]
}
